# change layout
alt - e : /opt/homebrew/bin/yabai -m space --layout bsp
alt - s : /opt/homebrew/bin/yabai -m space --layout float

# floating windows
alt + shift - space : /opt/homebrew/bin/yabai -m window --toggle float
alt - c  : /opt/homebrew/bin/yabai -m window --toggle float&&/opt/homebrew/bin/yabai -m window --grid 12:12:1:1:10:10

# enter fullscreen mode for the focused container
alt - f : /opt/homebrew/bin/yabai -m window --toggle zoom-fullscreen
####### Shortcut Hotkeys #############
# cmd + alt + ctrl + shift = caps lock

# Launch terminal
alt - 0x24 : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~
cmd + alt + ctrl + shift - 0x31 : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~ --start-as=maximized --title="quake" --override remember_window_size=no --override initial_window_width=9999 --override initial_window_height=600 

# restart Yabi, SpaceBar, and SKHD
alt + shift - r : killall /opt/homebrew/bin/yabai&&/opt/homebrew/bin/yabai --start-service&&skhd --reload

# Rotate workspace clockwise
cmd + alt + ctrl + shift - 0x32 : /opt/homebrew/bin/yabai -m space --rotate 90

# focus windows
cmd + alt + ctrl + shift - q : /opt/homebrew/bin/yabai -m window --focus next || /opt/homebrew/bin/yabai -m window --focus first
cmd + alt + ctrl + shift - e : /opt/homebrew/bin/yabai -m window --focus prev || /opt/homebrew/bin/yabai -m window --focus last

# window resizing
cmd + alt + ctrl + shift - w : /opt/homebrew/bin/yabai -m window --resize top:0:-20 || /opt/homebrew/bin/yabai -m window --resize bottom:0:-20
cmd + alt + ctrl + shift - s : /opt/homebrew/bin/yabai -m window --resize top:0:20 || /opt/homebrew/bin/yabai -m window --resize bottom:0:20
cmd + alt + ctrl + shift - a : /opt/homebrew/bin/yabai -m window --resize left:-20:0 || /opt/homebrew/bin/yabai -m window --resize right:-20:0
cmd + alt + ctrl + shift - d : /opt/homebrew/bin/yabai -m window --resize left:20:0 || /opt/homebrew/bin/yabai -m window --resize right:20:0

cmd + alt + ctrl + shift - h : /opt/homebrew/bin/yabai -m window --swap west
cmd + alt + ctrl + shift - j: /opt/homebrew/bin/yabai -m window --swap south
cmd + alt + ctrl + shift - k: /opt/homebrew/bin/yabai -m window --swap north
cmd + alt + ctrl + shift - l: /opt/homebrew/bin/yabai -m window --swap east


# Switch spaces and move windows
ctrl - 1: /opt/homebrew/bin/yabai -m space --focus 1
ctrl - 2: /opt/homebrew/bin/yabai -m space --focus 2
ctrl - 3: /opt/homebrew/bin/yabai -m space --focus 3
ctrl - 4: /opt/homebrew/bin/yabai -m space --focus 4
ctrl - 5: /opt/homebrew/bin/yabai -m space --focus 5
ctrl - 6: /opt/homebrew/bin/yabai -m space --focus 6
ctrl - 7: /opt/homebrew/bin/yabai -m space --focus 7
ctrl - 8: /opt/homebrew/bin/yabai -m space --focus 8
ctrl - 9: /opt/homebrew/bin/yabai -m space --focus 9
ctrl - 0: /opt/homebrew/bin/yabai -m space --focus 10

ctrl + shift - 1: /opt/homebrew/bin/yabai -m window --space 1 && /opt/homebrew/bin/yabai -m space --focus 1
ctrl + shift - 2: /opt/homebrew/bin/yabai -m window --space 2 && /opt/homebrew/bin/yabai -m space --focus 2
ctrl + shift - 3: /opt/homebrew/bin/yabai -m window --space 3 && /opt/homebrew/bin/yabai -m space --focus 3
ctrl + shift - 4: /opt/homebrew/bin/yabai -m window --space 4 && /opt/homebrew/bin/yabai -m space --focus 4
ctrl + shift - 5: /opt/homebrew/bin/yabai -m window --space 5 && /opt/homebrew/bin/yabai -m space --focus 5
ctrl + shift - 6: /opt/homebrew/bin/yabai -m window --space 6 && /opt/homebrew/bin/yabai -m space --focus 6
ctrl + shift - 7: /opt/homebrew/bin/yabai -m window --space 7 && /opt/homebrew/bin/yabai -m space --focus 7
ctrl + shift - 8: /opt/homebrew/bin/yabai -m window --space 8 && /opt/homebrew/bin/yabai -m space --focus 8
ctrl + shift - 9: /opt/homebrew/bin/yabai -m window --space 9 && /opt/homebrew/bin/yabai -m space --focus 9
ctrl + shift - 0: /opt/homebrew/bin/yabai -m window --space 10 && /opt/homebrew/bin/yabai -m space --focus 10

